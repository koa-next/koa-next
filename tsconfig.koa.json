{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "charset": "utf8",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "index.ts",
    "next.config.ts",
    "app/**/*",
    "config/**/*",
    "test/**/*"
  ]
}
